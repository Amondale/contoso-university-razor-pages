@page "{id}"
@model ContosoUniversity.Web.Pages.Departments.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<p class="text-danger">@Model.ConcurrencyErrorMessage</p>
<h4>Are you sure you want to delete this department?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Budget)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.FoundedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.FoundedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.DepartmentChair)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentChair.FullName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Department.Id" />
        <input type="hidden" asp-for="Department.RowVersion" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
