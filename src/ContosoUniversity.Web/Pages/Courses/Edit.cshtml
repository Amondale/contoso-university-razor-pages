@page
@model ContosoUniversity.Web.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Course.Id" />
            <input type="hidden" asp-for="Course.RowVersion" />
            <input type="hidden" asp-for="Course.AuditCreateDateTime" />
            <input type="hidden" asp-for="Course.AuditUpdateDateTime" />

            <div class="form-group">
                <label asp-for="Course.Title" class="col-form-label"></label>
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Course.Credits" class="col-form-label"></label>
                <input asp-for="Course.Credits" class="form-control" />
                <span asp-validation-for="Course.Credits" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Course.DepartmentName" class="col-form-label"></label>
                <select asp-for="Course.DepartmentId" class="form-control"
                        asp-items="@Model.DepartmentSelectList">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Course.DepartmentId" class="text-danger" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
